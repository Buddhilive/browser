{
  "name": "sltk",
  "version": "0.0.1",
  "description": "SLTK",
  "license": "MIT",
  "scripts": {
    "build:esm": "wasm-pack build --out-dir dist/esm --target bundler",
    "build:cjs": "wasm-pack build --out-dir dist/cjs --target nodejs",
    "build:web": "wasm-pack build --out-dir dist/web --target web",
    "build:clean": "rimraf dist",
    "build:all": "npm run build:clean && npm run build:esm && npm run build:cjs && npm run build:web",
    "gulp": "gulp",
    "test": "npm run build:all && jest ./testing",
    "build": "npm run build:all && gulp"
  },
  "main": "cjs/sltk.js",
  "module": "esm/sltk.js",
  "browser": "web/sltk.js",
  "types": "types/sltk.d.ts",
  "private": true,
  "devDependencies": {
    "@babel/preset-env": "^7.22.20",
    "@types/jest": "^29.4.0",
    "@types/node": "18.7.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "babel-jest": "^29.7.0",
    "del": "^4.1.1",
    "esbuild": "^0.19.4",
    "eslint": "~8.46.0",
    "eslint-config-prettier": "8.1.0",
    "gulp": "^4.0.2",
    "jest": "^29.4.1",
    "jest-environment-node": "^29.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buddhilive/sltk.git"
  },
  "keywords": [
    "javascript",
    "nodejs"
  ],
  "bugs": {
    "url": "https://github.com/buddhilive/sltk/issues"
  },
  "homepage": "https://sltk.buddhilive.com",
  "author": "Buddhi Kavindra",
  "overrides": {
    "graceful-fs": "^4.2.11"
  }
}
